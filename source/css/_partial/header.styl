.header {
    display: flex;
    margin: 0 auto;
    padding: 1.3em 2em;
    padding-bottom: 1.8em;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;

    .blog-title .logo {
        color: #000;
        font-size: 1.2em;
        text-decoration: none;
        height: 26.5;
        font-style: italic;
    }

    .menu {
        margin: 0 auto;
        vertical-align: text-top;
        padding-left: 0;
        .menu-item {
            display: inline-block;
            padding: 0.25em;
        }
        .menu-item-link {
            color: #818181;
            font-size: 1em;
            &:hover {
                color: #111;
            }
             text-decoration: none;
        }
        .current-menu-item-link {
            color: #111;
            text-decoration: none;
        }
    }

    @media screen and (max-width: 320px) {
        .menu {
            display: inline-flex;
        }
    }
}
