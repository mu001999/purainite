<section class="posts">
    <% page.posts.each(function (post) { %>
    <article class="post">
        <div class="post-title">
            <a class="post-title-link" href="<%- url_for(post.path) %>"><%- post.title %></a>
        </div>
        <div class="post-meta">
            <span class="post-time"><%- date(post.date, "MMMM DD, YYYY") %></span>
        </div>
        <div class="post-pre">
            <%- post.content %>
        </div>
        <p>
        <a class="post-title-link" href="<%- url_for(post.path) %>" style="text-decoration: none;">Read more --></a>
    </article>
    <% }) %>
</section>
